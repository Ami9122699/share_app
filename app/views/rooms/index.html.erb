<header>
<p>施設の一覧</p>
</header>

<% if flash[:alert] %>
 <p class="notice"><%= flash[:alert] %></p>
<% end %>
<% if flash[:false] %>
 <p class="notice"><%= flash[:false] %></p>
<% end %>

 <table>
   <thead>
     <tr>
       <th>画像</th>
       <th>施設名</th>
       <th>紹介</th>
       <th>宿泊料金</th>
       <th>作成日</th>
     </tr>
   </thead>
 
   <tbody>
   <% @rooms.each do |room| %>
       <tr>
         <td><img alt="部屋画像"  src="https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png" /></td>
         <td><%= link_to room.name, "/rooms/#{room.id}" %></td>
         <td><%= room.introduction %></td>
         <td><P>¥<%= room.price %></p></td>
         <td><%= room.created_at.strftime("%Y/%m/%d %H:%M") %></td>
         <td><%= link_to "削除", room, method: :delete, data: {confirm: "施設を削除しますか？"} %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <p><%= link_to "施設新規登録", new_room_path %></p>
